<h2>Add a new trip</h2>

<%=  form_with model: @trip do |f| %>
  <p>Fill in the following fields:</p>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :phone %>
      <%= f.text_area :phone %>
    </div>
    <%= f.submit "Add trip" %>
<% end %> 