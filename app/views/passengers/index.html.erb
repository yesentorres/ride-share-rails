<h1>Passenger List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @passengers.each do |passenger| %>
      <tr>
        <td><%= link_to passenger.name, passenger_path(passenger) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h4><a href="<%= new_passenger_path %>">Create a new passenger</a></h4>